---
const { area = 'testing prop'} = Astro.props 
---

<div class={`card`} area={area}>
	<slot />
</div>

<style>
	.card {
		background: #fff;
		padding: 20px;
		border-radius: 10px;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		margin-bottom: 20px;
	}
	.dark {
		background: var(---color-primary);
		color: white;
	}
	.filterDiv {
		display: none;
	}
	.show {
		display: block;
	}
</style>
