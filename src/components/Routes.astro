---
import Card from "./Card.astro";

const posts = await Astro.glob("../posts/*.md");
---

<section class="features">
	<div class="container">
		{posts.map((post) => 
    
    <Card>
      <h3>{post.frontmatter.title}</h3>
      <p>{post.frontmatter.body}</p>
      <p>{post.frontmatter.distanceK} | {post.frontmatter.area}</p>
      <a class="btn" href={`/${post.frontmatter.slug}`}>See route</a>

    </Card>
    )}
	</div>
</section>

<style>


/* Cards */
.features .container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 20px;
  padding: 0 20px;
  margin: 30px auto;
}


@media (max-width: 960px) {
  .logos-small {
    display: block;
    margin: auto;
  }
  .logos {
    display: none;
  }
}

@media (max-width: 500px) {
  .features .container {
    grid-template-columns: 1fr;
  }

</style>